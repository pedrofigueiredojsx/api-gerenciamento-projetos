<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="relatorio_tarefas"
              language="java"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- Parâmetro -->
    <parameter name="PROJECT_ID" class="java.lang.Integer"/>

    <!-- Query SQL -->
    <queryString>
        <![CDATA[
            SELECT t.id,
                   t.title,
                   t.description,
                   t.priority,
                   t.status,
                   t.due_date,
                   t.estimated_hours,
                   t.spent_hours,
                   u.name AS assigned_user,
                   p.name AS project_name
            FROM tasks t
            LEFT JOIN users u ON t.assigned_to = u.id
            LEFT JOIN projects p ON t.project_id = p.id
            WHERE t.project_id = $P{PROJECT_ID}
            ORDER BY t.priority DESC, t.due_date ASC
        ]]>
    </queryString>

    <!-- Campos -->
    <field name="title" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="priority" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>
    <field name="due_date" class="java.sql.Date"/>
    <field name="estimated_hours" class="java.lang.Integer"/>
    <field name="spent_hours" class="java.lang.Integer"/>
    <field name="assigned_user" class="java.lang.String"/>
    <field name="project_name" class="java.lang.String"/>

    <!-- Layout -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Relatório de Tarefas]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="200" height="20"/>
                <text><![CDATA[Título]]></text>
            </staticText>
            <staticText>
                <reportElement x="210" y="0" width="100" height="20"/>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="320" y="0" width="100" height="20"/>
                <text><![CDATA[Prioridade]]></text>
            </staticText>
            <staticText>
                <reportElement x="430" y="0" width="125" height="20"/>
                <text><![CDATA[Responsável]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{title}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="210" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="320" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{priority}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="430" y="0" width="125" height="20"/>
                <textFieldExpression><![CDATA[$F{assigned_user}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
