<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="relatorio_projetos"
              language="java"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <!-- Parâmetro -->
    <parameter name="PROJECT_ID" class="java.lang.Integer"/>

    <!-- Query SQL -->
    <queryString>
        <![CDATA[
            SELECT
                p.id,
                p.name as project_name,
                p.description,
                p.status,
                p.budget,
                p.start_date,
                p.end_date,
                COUNT(t.id) as total_tasks,
                SUM(CASE WHEN t.status = 'concluída' THEN 1 ELSE 0 END) as completed_tasks,
                u.name as owner_name,
                u.email as owner_email
            FROM projects p
            LEFT JOIN tasks t ON p.id = t.project_id
            LEFT JOIN users u ON p.user_id = u.id
            WHERE p.id = $P{PROJECT_ID}
            GROUP BY p.id, p.name, p.description, p.status, p.budget, p.start_date, p.end_date, u.name, u.email
        ]]>
    </queryString>

    <!-- Campos -->
    <field name="project_name" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="status" class="java.lang.String"/>
    <field name="budget" class="java.lang.Integer"/>
    <field name="start_date" class="java.sql.Date"/>
    <field name="end_date" class="java.sql.Date"/>
    <field name="total_tasks" class="java.lang.Long"/>
    <field name="completed_tasks" class="java.lang.Long"/>
    <field name="owner_name" class="java.lang.String"/>
    <field name="owner_email" class="java.lang.String"/>

    <!-- Layout -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Relatório do Projeto]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="100" height="20"/>
                <text><![CDATA[Nome]]></text>
            </staticText>
            <staticText>
                <reportElement x="110" y="0" width="200" height="20"/>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="320" y="0" width="100" height="20"/>
                <text><![CDATA[Tarefas Concluídas]]></text>
            </staticText>
            <staticText>
                <reportElement x="430" y="0" width="125" height="20"/>
                <text><![CDATA[Proprietário]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{project_name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="110" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="320" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{completed_tasks} + "/" + $F{total_tasks}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="430" y="0" width="125" height="20"/>
                <textFieldExpression><![CDATA[$F{owner_name}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
